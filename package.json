{
  "name": "@vitaeflow/sdk",
  "version": "0.1.0",
  "description": "JavaScript/TypeScript SDK for VitaeFlow - embed structured resume data in PDFs",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "browser": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:types && npm run build:cjs && npm run build:esm && npm run build:browser",
    "build:types": "tsc --emitDeclarationOnly",
    "build:cjs": "tsc --module commonjs --outDir dist",
    "build:esm": "tsc --module esnext --outDir dist/esm && mv dist/esm/index.js dist/index.esm.js && rm -rf dist/esm",
    "build:browser": "rollup -c",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "vitaeflow",
    "resume",
    "cv",
    "pdf",
    "ats",
    "structured-data",
    "metadata",
    "parsing"
  ],
  "author": "VitaeFlow Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vitaeflow/sdk-js.git"
  },
  "bugs": {
    "url": "https://github.com/vitaeflow/sdk-js/issues"
  },
  "homepage": "https://vitaeflow.org",
  "dependencies": {
    "@vitaeflow/vitae-schema": "^0.1.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "pako": "^2.1.0",
    "pdf-lib": "^1.17.1",
    "semver": "^7.7.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@types/pako": "^2.0.3",
    "@types/semver": "^7.7.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "rollup": "^4.46.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
